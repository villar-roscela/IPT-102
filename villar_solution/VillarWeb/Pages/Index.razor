@page "/"
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* Global Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            line-height: 1.6;
        }

        /* Header Styling */
        header {
            background-color: #3e2723;
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }

            header h1 {
                font-size: 3rem;
            }

        /* Navigation Bar (Removed Background Color) */
        nav {
            text-align: center;
            padding: 10px;
        }

            nav a {
                color: #fff;
                text-decoration: none;
                padding: 15px 20px;
                margin: 0 10px;
                font-size: 1.1rem;
            }

                nav a:hover {
                    background-color: #3e2723;
                }

        /* Main Section */
        main {
            padding: 20px;
        }

        /* About Us Section */
        .about-us {
            background-color: #fff;
            margin-bottom: 20px;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .about-us h2 {
                font-size: 2rem;
                margin-bottom: 10px;
            }

            .about-us p {
                font-size: 1.2rem;
            }

        /* Menu Section */
        .menu {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .menu-item {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .menu-item h3 {
                font-size: 1.8rem;
                margin-bottom: 10px;
            }

            .menu-item p {
                font-size: 1.2rem;
                margin-bottom: 10px;
            }

            .menu-item .price {
                font-size: 1.5rem;
                font-weight: bold;
                color: #3e2723;
            }

        /* Contact Form Section */
        .contact-form {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .contact-form h2 {
                font-size: 2rem;
                margin-bottom: 10px;
            }

            .contact-form input, .contact-form textarea {
                width: 100%;
                padding: 10px;
                margin-bottom: 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
            }

                .contact-form input[type="submit"] {
                    background-color: #3e2723;
                    color: #fff;
                    cursor: pointer;
                    border: none;
                    font-size: 1.1rem;
                }

                    .contact-form input[type="submit"]:hover {
                        background-color: #5d4037;
                    }

        /* Footer Section */
        footer {
            background-color: #3e2723;
            color: #fff;
            text-align: center;
            padding: 20px;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>

<body>

    <!-- Header Section -->
    <header>
        <h1>Welcome to Coffee Shop</h1>
        <p>Your favorite place for a perfect cup of coffee</p>
    </header>

    <!-- Navigation Bar -->
    <nav>
        <a href="About Us">About Us</a>
        <a href="Menu">Menu</a>
        <a href="Event">Event</a>
        <a href="Display">Display</a>
      
    </nav>

    <!-- Main Content -->
    <main>

        <!-- About Us Section -->
        <section id="about" class="about-us">
            <h2>About Us</h2>
            <p>At Coffee Shop, we believe that every cup of coffee tells a story. Whether it's your first sip of the day or your afternoon pick-me-up, our coffee is crafted with passion and care. Join us to experience a cozy ambiance, great conversations, and the best brews in town.</p>
        </section>

        <!-- Menu Section -->
        <section id="menu" class="menu">
            <div class="menu-item">
                <h3>Espresso</h3>
                <p>A strong and bold shot of coffee</p>
                <div class="price">$2.50</div>
            </div>
            <div class="menu-item">
                <h3>Cappuccino</h3>
                <p>Espresso with steamed milk and foam</p>
                <div class="price">$3.50</div>
            </div>
            <div class="menu-item">
                <h3>Latte</h3>
                <p>Espresso with steamed milk and a small amount of foam</p>
                <div class="price">$3.00</div>
            </div>
            <div class="menu-item">
                <h3>Mocha</h3>
                <p>Espresso with chocolate and steamed milk</p>
                <div class="price">$3.75</div>
            </div>
        </section>

        <!-- Contact Form Section -->
        <section id="contact" class="contact-form">
            <h2>Contact Us</h2>
            <form>
                <input type="text" name="name" placeholder="Your Name" required><br>
                <input type="email" name="email" placeholder="Your Email" required><br>
                <textarea name="message" placeholder="Your Message" rows="5" required></textarea><br>
                <input type="submit" value="Send Message">
            </form>
        </section>

    </main>

    <!-- Footer Section -->
    <footer>
        <p>&copy; 2024 Coffee Shop | All rights reserved</p>
    </footer>

</body>
</html>
